<Window x:Class="Homework3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите текст:" Margin="10,10,0,0" VerticalAlignment="Top" Height="60" FontSize="24" HorizontalAlignment="Left" Width="167"/>
        <TextBox x:Name="tb_text" Margin="10,70,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Height="147" TextChanged="tb_text_TextChanged"/>
        <Label Content="Количество слов в ведённом тексте:" Margin="10,247,0,0" VerticalAlignment="Top" FontSize="22" HorizontalAlignment="Left" Width="377"/>
        <TextBlock x:Name="tb_number" HorizontalAlignment="Left" Margin="410,257,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Width="36" AutomationProperties.HelpText="vfb"/>

    </Grid>
</Window>
